<Page
    x:Class="NebulaPlayerApp.BandPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NebulaPlayerApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
        <Button x:Name="btnLaunchBands" HorizontalAlignment="Stretch" FontSize="124" Click="btnLaunchBands_Click" Content="Launch Bands App" VerticalAlignment="Center"/>
        <Button x:Name="btnLaunchAlbums" HorizontalAlignment="Stretch" FontSize="124" Click="btnLaunchAlbums_Click" Content="Launch Albums App" VerticalAlignment="Center"/>
    </StackPanel>
</Page>
